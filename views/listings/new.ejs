<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="e.g., Peaceful Pilgrim's Rest" type="text" class="form-control" required>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload Images (select up to 5)</label>
                <input name="listing[image]" type="file" class="form-control" required multiple>
                <div class="invalid-feedback">Please upload at least one image</div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price (per person / night)</label>
                    <input name="listing[price]" placeholder="1500" type="number" class="form-control" required>
                    <div class="invalid-feedback">Price should be a valid number</div>
                </div>
    
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="e.g., India" type="text" class="form-control" required>
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="e.g., Haridwar, Uttarakhand" type="text" class="form-control" required>
                <div class="invalid-feedback">Location should be valid</div>
            </div>

            <hr>
            <h4>Pilgrim-Specific Details</h4>

            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="capacity" class="form-label">Total Capacity (persons)</label>
                    <input name="listing[capacity]" placeholder="e.g., 10" type="number" class="form-control" required>
                </div>
                <div class="mb-3 col-md-6">
                    <label for="festival_focus" class="form-label">Special Festival (optional)</label>
                    <input name="listing[festival_focus]" placeholder="e.g., Kumbh Mela" type="text" class="form-control">
                </div>
            </div>

            <!-- ================================================================= -->
            <!-- NEW, FLEXIBLE NEARBY LOCATIONS SECTION -->
            <!-- ================================================================= -->
            <p>Nearby Key Locations (optional)</p>
            <div class="row mb-3">
                <div class="col-8">
                    <label class="form-label">Location Name</label>
                    <input name="nearby_locations[0][name]" placeholder="e.g., Nashik Road Railway Station" type="text" class="form-control">
                </div>
                <div class="col-4">
                    <label class="form-label">Distance (km)</label>
                    <input name="nearby_locations[0][distance]" placeholder="5.0" type="number" step="0.1" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-8">
                    <input name="nearby_locations[1][name]" placeholder="e.g., Main Bus Stand" type="text" class="form-control">
                </div>
                <div class="col-4">
                    <input name="nearby_locations[1][distance]" placeholder="2.1" type="number" step="0.1" class="form-control">
                </div>
            </div>
             <div class="row mb-3">
                <div class="col-8">
                    <input name="nearby_locations[2][name]" placeholder="e.g., Trimbakeshwar Temple" type="text" class="form-control">
                </div>
                <div class="col-4">
                    <input name="nearby_locations[2][distance]" placeholder="20.5" type="number" step="0.1" class="form-control">
                </div>
            </div>
             <div class="row mb-3">
                <div class="col-8">
                    <input name="nearby_locations[3][name]" placeholder="e.g., Panchavati" type="text" class="form-control">
                </div>
                <div class="col-4">
                    <input name="nearby_locations[3][distance]" placeholder="3.2" type="number" step="0.1" class="form-control">
                </div>
            </div>
            <!-- ================================================================= -->

            <button class="btn btn-dark add-btn mt-3">Add Listing</button>
        </form>
    </div>
</div>

