<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Search Results for "<%= query %>"</h3>
        <% if (listings && listings.length > 0) { %>
            <p><%= listings.length %> listing(s) found.</p>
        <% } else { %>
            <p>No listings found matching your search. Please try another destination.</p>
            <a href="/listings">View All Listings</a>
        <% } %>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of listings) { %>
        <a href="/listings/<%= listing.id %>" class="listing-link">
            <div class="card col listing-card">
                <!-- FIX: Display the first image from the array -->
                <% if (listing.image && listing.image.length > 0) { %>
                    <img src="<%= listing.image[0] %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <% } else { %>
                    <!-- Fallback in case there are no images -->
                    <img src="https://placehold.co/600x400/EEE/31343C?text=No+Image" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <% } %>
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / person per night
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

