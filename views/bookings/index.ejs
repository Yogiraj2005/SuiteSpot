<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>My Bookings</h3>
        <p>Here are all the properties you have currently booked.</p>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% if (myBookings && myBookings.length > 0) { %>
        <% for(let booking of myBookings) { %>
            <a href="/listings/<%= booking.Listing.id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= booking.Listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= booking.Listing.title %></b> <br>
                            Booked from <b><%= new Date(booking.startDate).toLocaleDateString() %></b> to <b><%= new Date(booking.endDate).toLocaleDateString() %></b>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    <% } else { %>
        <div class="col-8 offset-2">
            <p>You have no active bookings.</p>
        </div>
    <% } %>
</div>
